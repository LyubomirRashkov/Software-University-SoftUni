@model ChatViewModel

<h3>Messages: </h3>

@if (Model.Messages is null)
{
	<p>No messages yet!</p>
}
else
{
	foreach (var message in Model.Messages)
	{
		<div class="card .bg-light col-6">
			<div class="card-body">
				<blockquote class="blockquote mb-0">
					<p>@message.MessageText</p>
					<footer class="blockquote-footer">@message.Sender</footer>
				</blockquote>
			</div>
		</div>
	}
}

<p></p>

<form asp-controller="Chat" asp-action="Send" method="post">
	<div class="form-group card-header row">
		<div class="col-12">
			<h5>Send a new message</h5>
		</div>
		<div class="col-8">
			<label class="col-12">Message:</label>
			<textarea asp-for="CurrentMessage.MessageText" class="col-12" class="form-contol" rows="3"></textarea>
		</div>
		<div class="col-4">
			<label>Sender Name:</label>
			<input asp-for="CurrentMessage.Sender" class="form-control"/>
			<input class="btn btn-primary mt-2" style="float: right" type="submit" value="Send" />
		</div>
	</div>
</form>