@model TextViewModel

@{
    ViewBag.Title = "Text Splitter";
}

<form asp-controller="Home" asp-action="Split" method="post">
    <div class="col-12">
        <input asp-for="@Model.Text" class="mr-25" />
        <button type="submit" class="btn btn-primary">Split Text</button>
    </div>
    <span asp-validation-for="@Model.Text" class="small text-danger col-2"></span>
    <div class="col-2 mt-3">
        <textarea rows="10">@Model.SplittedText</textarea>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}