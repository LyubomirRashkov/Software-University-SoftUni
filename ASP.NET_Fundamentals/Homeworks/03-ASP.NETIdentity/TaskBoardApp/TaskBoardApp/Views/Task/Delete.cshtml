@using TaskBoardApp.Models.Tasks

@model TaskViewModel

@{
	ViewBag.Title = "Delete Task";
}

<h2 class="text-center">@ViewBag.Title</h2>

<hr class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" />

<form asp-action="Delete">
	<div class="d-flex justify-content-center">
		<div class="card" style="width: 50rem;">
			<div class="card-body">
				<h3 class="card-title text-center">@Model.Title</h3>
				<p class="card-text"><span class="fw-bold">Desciption: </span>@Model.Description</p>
			</div>
			<div class="mb-3 d-flex justify-content-center">
				<input type="submit" value="Delete" class="btn btn-danger" />
			</div>
		</div>
	</div>
</form>